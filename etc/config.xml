<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <lofproductlabel>
            <general>
                <enabled>1</enabled>
            </general>
            <display>
                <product>.fotorama__stage</product>
                <category>.product-image-container, .product-item-photo</category>
                <max_labels>5</max_labels>
                <allow_multiple_labels>0</allow_multiple_labels>
            </display>
            <on_sale>
                <sale_min>0</sale_min>
                <sale_min_percent>0</sale_min_percent>
                <rounding>round</rounding>
            </on_sale>
            <new>
                <is_new>1</is_new>
                <creation_date>0</creation_date>
                <days>0</days>
            </new>
            <stock_status>
                <out_of_stock_only>0</out_of_stock_only>
                <default_label>3</default_label>
            </stock_status>
        </lofproductlabel>
    </default>
</config>
